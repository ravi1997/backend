		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"Password123!\",\n    \"employee_id\": \"EMP001\",\n    \"user_type\": \"employee\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/form/api/v1/auth/register",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"form",
								"api",
								"v1",
								"auth",
								"register"
							]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test(\"Status code is 201 or 409\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([201, 409]);",
									"});",
									"",
									"if (pm.response.code === 201) {",
									"    pm.test(\"Success message returned\", function () {",
									"        pm.expect(pm.response.json().message).to.equal(\"User registered\");",
									"    });",
									"} else if (pm.response.code === 409) {",
									"    pm.test(\"Conflict message returned\", function () {",
									"        pm.expect(pm.response.json().message).to.be.oneOf([\"Email already exists\", \"Employee ID already exists\"]);",
									"    });",
									"}"
								]
							}
						}
					]
				},
				{
					"name": "Login (Employee)",
