						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test(\"Status code handle success/fail\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 401, 403]);",
									"});",
									"",
									"if (pm.response.code === 200) {",
									"    pm.test(\"Access token present\", function () {",
									"        var jsonData = pm.response.json();",
									"        pm.expect(jsonData.access_token).to.not.be.undefined;",
									"        pm.environment.set(\"accessToken\", jsonData.access_token);",
									"    });",
									"} else {",
									"    pm.test(\"Error message present\", function () {",
									"        pm.expect(pm.response.json().msg).to.not.be.undefined;",
									"    });",
									"}"
								]
							}
						}
					]
				},
