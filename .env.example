# App Settings
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_here

# MongoDB Settings
MONGODB_DB=ai_backend
MONGODB_USER=admin
MONGODB_PASS=password123
MONGODB_PORT=27017
MONGODB_HOST=db
MONGODB_AUTH_SOURCE=admin

# For development, if you want different DB settings
DEV_MONGODB_DB=devdb
DEV_MONGODB_HOST=db
DEV_MONGODB_PORT=27017

# LLM Settings
LLM_PROVIDER=ollama
LLM_API_URL=http://ollama:11434/v1
LLM_MODEL=llama3

# Other Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=10485760

# Admin user config
DEVELOPMENT_ADMIN_USERNAME=admin
DEVELOPMENT_ADMIN_EMAIL=admin@example.com
DEVELOPMENT_ADMIN_PASSWORD=admin123

# Default user config
DEVELOPMENT_USER_USERNAME=user
DEVELOPMENT_USER_EMAIL=user@example.com
DEVELOPMENT_USER_PASSWORD=user123
