# --- Core Configuration ---
FLASK_ENV=development
SECRET_KEY=replace_with_a_secure_random_string
JWT_SECRET_KEY=replace_with_a_secure_jwt_secret

# --- SQL Database (PostgreSQL/SQLite) ---
DATABASE_URI=postgresql://user:pass@localhost:5432/dbname
DEVELOPMENT_DATABASE_URI=sqlite:///dev.db
TEST_DATABASE_URI=sqlite:///test.db

# --- MongoDB Configuration ---
MONGODB_DB=myflaskdb
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=
MONGODB_PASS=
MONGODB_AUTH_SOURCE=admin

# --- Admin & Initial User Seed ---
DEVELOPMENT_ADMIN_USERNAME=admin
DEVELOPMENT_ADMIN_EMAIL=admin@example.com
DEVELOPMENT_ADMIN_PASSWORD=admin123
DEVELOPMENT_USER_USERNAME=user
DEVELOPMENT_USER_EMAIL=user@example.com
DEVELOPMENT_USER_PASSWORD=user123

# --- File Uploads ---
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=10485760

# --- SMS Gateway (Optional) ---
SMS_API_URL=
SMS_SENDER_ID=
SMS_TEMPLATE_ID=
SMS_API_USERNAME=
SMS_API_PASSWORD=

# --- eHospital Integration (Optional) ---
EHOSPITAL_INIT_URL=
EHOSPITAL_FETCH_PATIENT_URL=
EHOSPITAL_USERNAME=
EHOSPITAL_PASSWORD=
EHOSPITAL_HOSPITAL_ID=0
EHOSPITAL_API_TOKEN=

# --- AI / LLM Configuration ---
LLM_PROVIDER=ollama
LLM_API_URL=http://ollama:11434/v1
LLM_MODEL=llama3
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# --- Ollama Connection Pool Configuration ---
OLLAMA_POOL_SIZE=5
OLLAMA_POOL_TIMEOUT=30
OLLAMA_CONNECTION_TIMEOUT=10

# --- Redis Configuration ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_MEMORY=256mb
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# --- Cache Configuration ---
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_MAX_MEMORY_PERCENT=0.8

# Cache Type TTLs (in seconds)
CACHE_TTL_FORM_SCHEMA=3600
CACHE_TTL_USER_SESSION=1800
CACHE_TTL_QUERY_RESULT=300
CACHE_TTL_DASHBOARD_WIDGET=120
CACHE_TTL_API_RESPONSE=60

# Cache Size Limits
CACHE_MAX_ENTRIES_FORM_SCHEMA=1000
CACHE_MAX_ENTRIES_USER_SESSION=5000
CACHE_MAX_ENTRIES_QUERY_RESULT=10000
CACHE_MAX_ENTRIES_DASHBOARD_WIDGET=5000
